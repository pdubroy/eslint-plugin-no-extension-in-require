{
  "name": "eslint-plugin-no-extension-in-require",
  "version": "0.1.0",
  "author": "Patrick Dubroy <pdubroy@gmail.com> (http://dubroy.com)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^5.9.1",
    "dirwatch": "^1.1.0",
    "eslint": "^0.17.1",
    "tap-spec": "^1.0.1",
    "tape": "^2.13.4",
    "watchify": "^1.0.1"
  },
  "scripts": {
    "build": "browserify . $npm_package_browserify_opts",
    "watch": "watchify -v . $npm_package_browserify_opts",
    "test": "tape test/*.js | tap-spec",
    "test-continuous": "npm test; dirwatch *.js test/*.js -c 'which tput && tput clear; date; tape test/*.js' | tap-spec",
    "prepublish": "npm run build && npm run test && npm run lint",
    "lint": "eslint index.js lib test"
  },
  "browserify": {
    "opts": "-d -s eslint-plugin-no-extension-in-require -o dist/eslint-plugin-no-extension-in-require.js"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "description": "A plugin for ESLint that ensures that the path argument to `require` does not include a file extension.",
  "repository": {
    "type": "git",
    "url": "https://github.com/pdubroy/eslint-plugin-no-extension-in-require.git"
  },
  "keywords": [
    "eslint",
    "plugin",
    "node",
    "require",
    "path",
    "extension"
  ],
  "bugs": {
    "url": "https://github.com/pdubroy/eslint-plugin-no-extension-in-require/issues"
  },
  "homepage": "https://github.com/pdubroy/eslint-plugin-no-extension-in-require"
}
